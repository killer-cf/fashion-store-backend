generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CLIENT
  ADMIN
}

enum ProductStatus {
  ACTIVE
  DISABLED
}

enum CouponStatus {
  ACTIVE
  DISABLED
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  password String
  phone    String?
  role     UserRole @default(CLIENT)
  Order    Order[]
  image    Image?

  @@map("users")
}

model Product {
  id          String        @id @default(uuid())
  sku         String        @unique
  name        String
  description String
  price       Int
  model       String
  colors      String[]
  status      ProductStatus
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime?     @updatedAt @map("updated_at")
  brand_id    String

  order_items OrderItem[]
  brand       Brand       @relation(fields: [brand_id], references: [id])
  images      Image[]

  @@map("products")
}

model Order {
  id           String      @id @default(uuid())
  totalPrice   Int
  address      String
  trackingCode String?
  state        String
  client_id    String
  order_items  OrderItem[]
  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime?   @updatedAt @map("updated_at")

  client User @relation(fields: [client_id], references: [id])

  @@map("orders")
}

model OrderItem {
  id         String @id @default(uuid())
  quantity   Int
  product_id String
  order_id   String

  order   Order   @relation(fields: [order_id], references: [id])
  product Product @relation(fields: [product_id], references: [id])

  @@map("order_items")
}

model Brand {
  id       String    @id @default(uuid())
  name     String    @unique
  products Product[]

  @@map("brand")
}

model Image {
  id         String  @id @default(uuid())
  title      String
  url        String
  product_id String?
  user_id    String? @unique

  user    User?    @relation(fields: [user_id], references: [id])
  product Product? @relation(fields: [product_id], references: [id])

  @@map("images")
}

model Coupon {
  id           String       @id @default(uuid())
  code         String       @unique
  status       CouponStatus
  description  String
  discount     Int
  discountType String
  maxDiscount  Int
  minValue     Int
  quantity     Int
  expiresAt    DateTime
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime?    @updatedAt @map("updated_at")

  @@map("coupons")
}
